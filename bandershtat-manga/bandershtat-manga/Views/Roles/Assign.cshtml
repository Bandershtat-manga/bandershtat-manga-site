@model bandershtat_manga.Models.AssignRoleViewModel

@{
    ViewData["Title"] = "Assign Role";
}

<h1 style="color: white">Присвоєння ролі</h1>

<form asp-action="Assign" asp-controller="Roles" method="post" style="color: white">
    <div class="form-group">
        <label for="UserId">Оберіть користувача:</label>
        <select asp-for="UserId" class="form-control" asp-items="new SelectList(ViewBag.Users)"></select>
    </div>
    <div class="form-group">
        <label for="RoleId">Оберіть роль:</label>
        <select asp-for="RoleId" class="form-control" asp-items="new SelectList(ViewBag.Roles)"></select>
    </div>
    <button type="submit" class="btn btn-primary">Assign</button>
</form>

